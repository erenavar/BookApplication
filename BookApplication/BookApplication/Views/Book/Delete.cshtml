@model Book


<form method="post">
    <div class="border p-3 m-5">
        <div class="row pb-3">
            <h2 class="text-primary">Delete Book</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" disabled class="form-control" />
   
        </div>

        <div class="mb-3">
            <label asp-for="Definition" class="p-0"></label>
            <input asp-for="Definition" disabled class="form-control" />
         
        </div>

        <div class="mb-3">
            <label asp-for="Author" class="p-0"></label>
            <input asp-for="Author" disabled class="form-control" />

        </div>

        <div class="mb-3">
            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" disabled class="form-control" />

        </div>
        <button type="submit" class="btn btn-lg btn-primary" style="width:200px">Delete Book</button>
        <a asp-controller="Book" asp-action="Index"
           class="btn btn-lg btn-primary"
           style="width:200px">
            Back to Book
        </a>
    </div>
</form>