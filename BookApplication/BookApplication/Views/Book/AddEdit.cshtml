@model Book


<form method="post" enctype="multipart/form-data">

    <div class="row">

        <div class="col-10">

                <div class="border p-3 m-5">
            <div class="row pb-3">
                    <h2 class="text-primary">@(Model == null ? "Add Book" : "Edit Book")</h2>
                <hr />
            </div>
            <div class="mb-3">
                <label asp-for="Name" class="p-0"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="BookTypeId" class="p-0"></label>
                <select asp-for="BookTypeId" asp-items="ViewBag.BookTypeList" class="form-select"></select>
 
            </div>

            <div class="mb-3">
                <label asp-for="Definition" class="p-0"></label>
                <input asp-for="Definition" class="form-control" />
                <span asp-validation-for="Definition" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Author" class="p-0"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>

     

            <div class="mb-3">
                <label asp-for="Price" class="p-0"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PicUrl" class="p-0"></label>
                <input type="file" name="file" class="form-control" />
            </div>

            @if (Model != null)
            {
                <button type="submit" class="btn btn-lg btn-primary" style="width:200px">Edit</button>
            }else
            {
                <button type="submit" class="btn btn-lg btn-primary" style="width:200px">Add</button>
            
            }

            <a asp-controller="Book" asp-action="Index" 
                class="btn btn-lg btn-primary" 
                style="width:200px">
                Back to Books</a>
        </div>
        
        </div>
        <div class="col-2">
            @if(Model != null){
            <img src="@Model.PicUrl" width="100%"  style="border-radius=7px; border=1px solid #bbb9b9"/>
            } 
        </div>

    </div>

</form>