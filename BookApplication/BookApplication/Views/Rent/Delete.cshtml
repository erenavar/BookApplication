@model Rent


<form method="post">
    <input asp-for="Id" />
    <div class="border p-3 m-5">
        <div class="row pb-3">
            <h2 class="text-primary">Delete Rent Record</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="StudentId" class="p-0"></label>
            <input asp-for="StudentId" disabled class="form-control" />
   
        </div>

       
        <button type="submit" class="btn btn-lg btn-primary" style="width:200px">Delete Record</button>
        <a asp-controller="Rent" asp-action="Index"
           class="btn btn-lg btn-primary"
           style="width:200px">
            Back to Rent List
        </a>
    </div>
</form>