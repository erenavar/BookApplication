@model Rent


<form method="post" enctype="multipart/form-data">

    <div class="row">


                 
                <div class="border p-3 m-5">
            <div class="row pb-3">
                    <h2 class="text-primary">@(Model == null ? "Rent" : "Update Rent")</h2>
                <hr />
            </div>
            <div class="mb-3">
                <label asp-for="StudentId" class="p-0"></label>
                <input asp-for="StudentId" class="form-control" />
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="BookId" class="p-0"></label>
                <select asp-for="BookId" asp-items="ViewBag.BookList" class="form-select"></select>
 
            </div>


            @if (Model != null)
            {
                <button type="submit" class="btn btn-lg btn-primary" style="width:200px">Edit</button>
            }else
            {
                <button type="submit" class="btn btn-lg btn-primary" style="width:200px">New Rent</button>
            
            }

            <a asp-controller="Rent" asp-action="Index" 
                class="btn btn-lg btn-primary" 
                style="width:200px">
                Back to Rents</a>
        </div>

      

    </div>

</form>