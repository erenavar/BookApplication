@model List<BookType>


@if(TempData["successful"] != null)
{
    <h2 style="color:red" >@TempData["successful"]</h2>
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div>
        <h1>Book Types</h1>

        </div>
    </div>
</div>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>Book Type</th>
            <th></th>
            <th></th>
    </tr>

    </thead>
    <tbody>
        @foreach(var bookType in Model){
            <tr>
                <td>@bookType.Id</td>
                <td>@bookType.Name</td>
                <td>
                <a 
                    asp-controller="BookType" 
                    asp-action="Edit"
                    asp-route-id="@bookType.Id"
                    type="button" 
                    class="btn btn-success"
                    style="width:250px; align-items='center'"
                >Edit
                </a>
                </td>
                <td>
                    <a asp-controller="BookType"
                       asp-action="Delete"
                       asp-route-id="@bookType.Id"
                       type="button"
                       class="btn btn-danger"
                       style="width:250px">
                       Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>

</table>
<div class="row pt-3 pb-2">
    <div>
        <a asp-controller="BookType" asp-action="Add" class="btn btn-lg btn-primary" type="button">Create New Book Type</a>
    </div>
</div>